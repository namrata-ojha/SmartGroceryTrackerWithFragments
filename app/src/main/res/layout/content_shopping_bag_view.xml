<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewCategoryNameShoppingBag"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="false"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp"
        android:focusable="false"
        android:gravity="center_vertical"
        android:text="Name"
        android:textSize="15dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageViewItemImageShoppingBag"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/textViewCategoryNameShoppingBag"

        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="true"
        android:layout_margin="2dp"
        android:layout_toRightOf="@+id/textViewCategoryNameShoppingBag"
        android:adjustViewBounds="true"
        android:clickable="false"

        android:focusable="false" />

    <TextView
        android:id="@+id/textViewItemNameShoppingBag"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/imageViewItemImageShoppingBag"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageViewItemImageShoppingBag"
        android:autoText="false"
        android:clickable="false"
        android:focusable="false"
        android:gravity="center_vertical"
        android:text="Name"
        android:textSize="15dp"
        android:textStyle="bold"

        />


    <!--<EditText-->
    <!--android:id="@+id/editTextShoppingBagDetail"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:focusable="false"-->
    <!--android:layout_alignBottom="@+id/textViewItemNameShoppingBag"-->
    <!--android:layout_alignParentTop="true"-->
    <!--android:layout_toRightOf="@+id/textViewItemNameShoppingBag" />-->


    <Button
        android:id="@+id/buttonAddItem"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/textViewCategoryNameShoppingBag"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imageViewItemImage"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.01"
        android:background="@drawable/save"
        android:clickable="false"
        android:focusable="false" />

</RelativeLayout>
