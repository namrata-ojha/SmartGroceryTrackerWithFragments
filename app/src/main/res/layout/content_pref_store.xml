<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.scu.smartgrocerytracker.location.PrefStoreActivity">
    <!--tools:showIn="@layout/activity_pref_store"-->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search within"
        android:id="@+id/searchPrefStoreTxtView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="miles"
        android:id="@+id/milesTxtView"
        android:layout_below="@+id/searchPrefStoreTxtView"
        android:layout_alignLeft="@+id/viewPrefStoreBtn"
        android:layout_alignStart="@+id/viewPrefStoreBtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:id="@+id/searchPrefStoreBtn"
        android:layout_marginTop="47dp"
        android:layout_below="@+id/searchPrefStoreTxtView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="46dp"
        android:layout_marginStart="46dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Preferred Store"
        android:id="@+id/viewPrefStoreBtn"
        android:layout_alignTop="@+id/searchPrefStoreBtn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/prefStoreListView"
        android:layout_below="@+id/searchPrefStoreBtn" />

    <EditText
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:id="@+id/editText"
        android:inputType="number"

        android:text="1"
        android:layout_alignTop="@+id/searchPrefStoreTxtView"
        android:layout_toLeftOf="@+id/milesTxtView"
        android:layout_toStartOf="@+id/milesTxtView" />

</RelativeLayout>
